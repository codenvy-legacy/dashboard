.factory-type-icon
  padding 10px 0
  width 100%

.factory-type-icon md-icon
  margin 0 24px
  height 36px !important
  line-height 36px
  width 36px !important
  font-size 36px !important
  color $label-secondary-color

.factory-list-static-icon
  flex 0 0 100px
  text-align center

.factory-list-static-icon + div
  cursor pointer

.factory-list-row
  min-height 56px
  margin-left 10px
  margin-right 0

.factory-list-row > div
  display flex
  outline none

.factory-list-row .factory-name
  font-size 1em
  line-height 19px
  color $label-primary-color

.factory-list-row .factory-name .factory-details
  font-size 0.9em
  margin-left 10px
  color $label-info-color

.factory-list-row .factory-details
  font-size 0.9em
  line-height 15px
  color $label-info-color

.factory-list-row .factory-id-url
  font-size 0.9em
  line-height 19px
  color $link-color

.factory-list-details-arrow md-icon
  height 32px !important
  line-height 35px
  width 36px !important
  font-size 32px !important

.factory-list-details-arrow button
  font-size 11px !important
