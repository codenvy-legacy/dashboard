/* FUNCTIONS */
trig(op, angle_deg) // deg
  angle_rad = (angle_deg * 3.14) / 180
  return unit(math( angle_rad , op),'')

atan(a,b)
  x = math( a/b , 'atan')
  return (x * 180) / 3.14 //deg

